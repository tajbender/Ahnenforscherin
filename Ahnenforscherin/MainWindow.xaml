<?xml version="1.0" encoding="utf-8"?>
<Window x:Class="Ahnenforscherin.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:local="using:Ahnenforscherin"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="Ahnenforscherin">
    <Window.SystemBackdrop>
        <MicaBackdrop />
    </Window.SystemBackdrop>
    <Grid Background="{StaticResource AfBackgroundAltColor}">
        <NavigationView x:Name="NavigationView"
                        Header="Ahnenforscherin"
                        Background="{StaticResource AfBackgroundAltColor}"
                        IsSettingsVisible="True"
                        PaneDisplayMode="Left"
                        SelectionChanged="NavigationView_SelectionChanged">
            <NavigationView.MenuItems>
                <NavigationViewItem Content="Workbench"
                                    Tag="Workbench"
                                    Icon="Home" />
                <NavigationViewItem Content="Personen"
                                    Icon="People" />
                <NavigationViewItem Content="StammbÃ¤ume"
                                    Icon="Calendar" />
            </NavigationView.MenuItems>
            <NavigationView.FooterMenuItems>
                <NavigationViewItem Content="Benutzerkonten"
                                    Tag="AccountPage"
                                    Icon="Account" />
                <NavigationViewItem Content="Datenquellen"
                                    Tag="DatasourcePage"
                                    Icon="Library" />
                <NavigationViewItem Content="Hilfe"
                                    Tag="HelpPage"
                                    Icon="Help" />
            </NavigationView.FooterMenuItems>
            <Frame x:Name="ContentFrame" />
        </NavigationView>
    </Grid>
</Window>
